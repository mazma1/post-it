{
  "name": "post-it",
  "version": "1.0.0",
  "description": "A simple application that allows friends and colleagues create groups for messaging.",
  "main": "./app/client/index.js",
  "directories": {
    "test": "test"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "unmockedModulePathPatterns": [
      "react"
    ],
    "collectCoverage": false,
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "collectCoverageFrom": [
      "**/app/client/**/*.{js,jsx}",
      "**/app/components/**",
      "!**/dist/**",
      "!**/js/**",
      "!**/utils/**"
    ]
  },
  "scripts": {
    "build:client": "webpack -p --config ./webpack.config.prod.js",
    "build:server": "rimraf app/server/dist/ && babel ./app/server --out-dir ./app/server/dist/ --ignore ./test --copy-files",
    "build": "concurrently \"npm run build:server\" \"npm run build:client\"",
    "production": "NODE_ENV=production npm run build",
    "postinstall": "npm run production",
    "start": "node app/server/dist/bin/www",
    "start:dev": "nodemon --exec babel-node ./app/server/bin/www --ignore ./app/client",
    "rebuild:testdb": "NODE_ENV=test sequelize db:migrate:undo:all && NODE_ENV=test sequelize db:migrate",
    "seed:testdb": "NODE_ENV=test sequelize db:seed:all",
    "create:testdb": "NODE_ENV=test npm run rebuild:testdb && npm run seed:testdb",
    "run:test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text ./node_modules/.bin/mocha --compilers js:babel-core/register --timeout 20000 ./app/server/test/**/*.test.js",
    "test:server": "npm run create:testdb && npm run run:test",
    "test:client": "jest .app/client/test/  --verbose",
    "test": "npm run test:server && npm run test:client && npm run coverage",
    "reset_db": "NODE_ENV=production sequelize db:migrate:undo:all && NODE_ENV=production sequelize db:migrate && NODE_ENV=production sequelize db:seed:all",
    "db:migrate": "sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov --token=667be486-fedc-4343-ab96-cb95a078b858"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mazma1/post-it.git"
  },
  "author": "Mary Mazi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mazma1/post-it/issues"
  },
  "homepage": "https://github.com/mazma1/post-it#readme",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-react-hmre": "^1.1.1",
    "bootstrap-css": "^4.0.0-alpha.5",
    "chai": "^4.0.2",
    "chai-http": "^3.0.0",
    "codecov": "^2.3.0",
    "coveralls": "^2.13.3",
    "cross-env": "^5.0.5",
    "enzyme": "^2.9.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-react-app": "^2.0.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.1.0",
    "expect": "^1.20.2",
    "istanbul": "^0.4.4",
    "jest": "^20.0.4",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nock": "^9.0.14",
    "nodemon": "^1.11.0",
    "nyc": "^11.2.1",
    "react-hot-loader": "^1.3.1",
    "react-test-renderer": "^15.6.1",
    "redux-mock-store": "^1.3.0",
    "sinon": "^2.4.1"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.2",
    "bootstrap-loader": "^2.1.0",
    "bootstrap-sass": "^3.3.7",
    "classnames": "^2.2.5",
    "concurrently": "^3.5.0",
    "config": "^1.26.1",
    "css-loader": "^0.28.4",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "file-loader": "^0.11.2",
    "google-auth-library": "^0.11.0",
    "html-webpack-plugin": "^2.29.0",
    "jquery": "^3.2.1",
    "jsonwebtoken": "^7.4.1",
    "lodash": "^4.17.4",
    "materialize-css": "^0.99.0",
    "materialize-loader": "^2.0.0",
    "moment": "^2.18.1",
    "morgan": "^1.8.2",
    "nexmo": "^2.0.2",
    "node-sass": "^4.5.3",
    "nodemailer": "^4.0.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "nyc": "^11.1.0",
    "pg": "^6.2.4",
    "pg-hstore": "^2.3.2",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-google-button": "^0.3.0",
    "react-google-login": "^2.11.3",
    "react-modal": "^2.2.2",
    "react-paginate": "^4.4.3",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "redux": "^3.7.1",
    "redux-thunk": "^2.2.0",
    "resolve-url-loader": "^2.1.0",
    "sass-loader": "^6.0.6",
    "sequelize": "^3.23.0",
    "sequelize-cli": "^2.7.0",
    "style-loader": "^0.18.2",
    "toastr": "^2.1.2",
    "url-loader": "^0.5.9",
    "uuid": "^3.0.1",
    "validator": "^7.0.0",
    "webpack": "^3.0.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-dev-server": "^2.5.0",
    "webpack-hot-middleware": "^2.18.0"
  }
}
